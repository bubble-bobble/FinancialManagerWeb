@model AccountTypeViewModel

@{
    ViewData["Title"] = "Create account type";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create account type form</h5>
        <hr/>
        <form asp-controller="AccountTypes" asp-action="Create">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}